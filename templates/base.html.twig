<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bienvenue{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/style.css')}}">
    <link rel="stylesheet" href="{{asset('css/tablet.css')}}">
    <link rel="stylesheet" href="{{asset('css/mobile.css')}}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"/>
          {# LEAFLET #}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"/>
           <!-- Make sure you put this AFTER Leaflet's CSS -->        
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% endblock %}
</head>
<body>
    <div id= "container" >
        <div class="header">
            <div class="connexion_register">
                <div class="topnav">
                    <a href="{{ path('app_home') }}"><img class="logo" src="{{ asset('build/images/logo-tgge.png') }}" alt="LOGO"></a>
                    <div id= "nav_links" class="nav_links">
                            <button class="btn"><a href="{{ path('app_home') }}" class="text-white nav_item">Société</a></button>
                            <button class="btn"><a href="{{ path('app_home') }}" class="text-white nav_item">Services</a></button>
                            <button class="btn"><a href="{{ path('app_devis_new') }}" class="text-white nav_item">Devis</a></button>
                            <button class="btn"><a href="{{ path('app_contact_form') }}" class="text-white nav_item">Contact</a></button>
                    </div>
                    <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                        <i class="fa fa-bars"></i>
                    </a>
                </div>
                <div class="nav_bar">
                    <div class="drop_down">
                        <button class="dropbtn">
                            <i class="fa-solid fa-user btn success"></i></a></button>
                        </button>
                        <div class="dropdown-content">
                            {% if app.user %}
                                <p class="badge bg-dark">Bienvenue {{ app.user.userIdentifier }}</p>
                                <button class="btn"><a href="{{ path('app_logout') }}" class="btn warning">déconnexion</a></button>
                            {% else %}
                                <button class="btn"><a href="{{ path('app_login') }}" class="btn success">Se connecter</a></button>
                                <button class="btn"><a href="{{ path('app_register') }}" class="btn success">S'inscrire</a></button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>    

{% block body %}

{% endblock %}
        <div id="footer">
            <div class="footer-1">
                <ul>
                    <li>
                        <a href="">Politique de Confidentialité</a>
                    </li>
                    <li>
                        <a href="">La Société</a>
                    </li>
                    <li>
                        <a href="{{ path('app_home') }}"><img  class="logo" src="{{ asset('build/images/logo-tgge.a9233069.png') }}" alt=""></a>
                    </li>
                    <li>
                        <a href="">A Propos</a>
                    </li>
                    <li>
                        <a href="">Conditions d'Utilisations</a>
                    </li>
                </ul>
            </div>
            <div class="footer-2">          
                <ul>
                    <li>
                        <i class="fa-brands fa-square-twitter fa-2xl"></i>
                    </li>
                    <li>
                        <i class="fa-brands fa-square-facebook fa-2xl"></i>
                    </li>
                    <li>
                        <i class="fa-brands fa-square-instagram fa-2xl"></i>
                    </li>
                    <li>
                        <i class="fa-solid fa-copyright fa-2xl"></i>
                    </li>
                </ul>
            </div>
            <div class="footer-3">
                <p> © Photo, Inc. 2023 </p>
            </div>
        </div>
    </div>    
</body>
</html>
<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
<script src="{{asset('js/devis.js')}}"></script>
{% block javascripts %}
<script>
    function myFunction() {
      var x = document.getElementById("nav_links");
      if (x.style.display === "block") {
        x.style.display = "none";
      } else {
        x.style.display = "block";
      }
    }
</script>    
{% endblock %}
