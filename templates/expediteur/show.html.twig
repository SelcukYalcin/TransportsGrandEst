{% block title %}Expéditeur{% endblock %}

{% block body %}
    <h1>Expéditeur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ expediteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ expediteur.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ expediteur.adresse }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
