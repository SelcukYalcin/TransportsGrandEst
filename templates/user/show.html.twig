{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="badge bg-info">Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td><span class="badge bg-success">{{ user.id }}</span></td>
            </tr>
            <tr>
                <th>Email</th>
                <td><span class="badge bg-success">{{ user.email }}</span></td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>
                    {% for role in user.roles %}
                        <span class="badge bg-success">{{ role }}</span>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <div style="display: flex;">

        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a><br>
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a>

        {% if app.user != user %}
            {{ include('user/_delete_form.html.twig') }}
        {% endif %}

    </div>
{% endblock %}
