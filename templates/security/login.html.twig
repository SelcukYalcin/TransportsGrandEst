{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté  {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="badge bg-warning">Se déconnecter</a>
        </div>
    {% else %}

    <h1 class="badge bg-info">Se connecter</h1><br>
    <label class="required" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"  class="form-control" autocomplete="email" required autofocus>
    <label class="required" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

{#    #}{##}
{#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
{#        See https://symfony.com/doc/current/security/remember_me.html#}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
        <button class="btn btn-primary mt-3" type="submit">
            Connexion
        </button>
        <a href="{{ path('forgotten_password') }}" class="btn btn-secondary mt-3">
            Mot de passe oublié
        </a>
    {% endif %}
</form>
{% endblock %}
